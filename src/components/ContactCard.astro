---
type Props = {
    icon: string,
    bgColor: string,
    textColor: string,
    title: string,
    details: string[],
}

const {icon, bgColor, textColor, title, details} = Astro.props
---
<div class="flex flex-col sm:flex-row items-center gap-6">
    <div class={`flex items-center justify-center w-16 h-16 rounded-full ${bgColor} ${textColor}`}>
      <i class={`${icon} text-2xl`}></i>
    </div>
    <div class=" text-center sm:text-left">
      <h3 class="text-lg font-bold mt-4">{title}</h3>
      {details.map((detail, index) => (
        <p class="text-gray-600 mt-2">{detail}</p>
      ))}
    </div>
  </div>